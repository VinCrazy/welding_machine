  (setup
    ; Для односторонней платы используем только B.Cu для дорожек
    (stackup
      (layer "F.Cu" (type "signal") (thickness 0.035))
      (layer "B.Cu" (type "signal") (thickness 0.035))
    )
    (pcbplotparams
      (layerselection 0x01010_80000001) ; Только Bottom layer для меди
      (usegerberextensions false)
    )
  )

  ; Определяем границы платы 200x150 мм
  (gr_line
    (start 0 0)
    (end 200000000 0)
    (angle 90)
    (layer "Edge.Cuts")
    (width 0.15)
  )
  (gr_line
    (start 200000000 0)
    (end 200000000 150000000)
    (angle 90)
    (layer "Edge.Cuts")
    (width 0.15)
  )
  (gr_line
    (start 200000000 150000000)
    (end 0 150000000)
    (angle 90)
    (layer "Edge.Cuts")
    (width 0.15)
  )
  (gr_line
    (start 0 150000000)
    (end 0 0)
    (angle 90)
    (layer "Edge.Cuts")
    (width 0.15)
  )

  ; Зоны полигонов (только Bottom layer)
  (zone (net 2) (net_name "GND") (layer B.Cu) (tstamp 1234567900)
    (hatch edge 0.508)
    (connect_pads (clearance 0.3))
    (min_thickness 0.254)
    (fill yes (arc_segments 16) (thermal_gap 0.508) (thermal_bridge_width 0.508))
    (polygon
      (pts
        (xy 10000000 10000000)
        (xy 190000000 10000000)
        (xy 190000000 140000000)
        (xy 10000000 140000000)
      )
    )
  )

